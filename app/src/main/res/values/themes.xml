    <style name="Theme.SyncMusic" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Primary: Aurora Green brilhante -->
        <item name="colorPrimary">@color/aurora_green_light</item>
        <item name="colorPrimaryVariant">@color/aurora_green</item>
        <item name="colorOnPrimary">@color/night_sky</item>

        <!-- Secondary: Aurora Purple vibrante -->
